{
    "name": "web hammer",
    "version": "1.0",
    "manifest_version": 2,
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "icons": {
        "128": "images/hammer.png"
    },
    "browser_action": {
        "default_title": "Start hammering!",
        "default_icon": "images/hammer.png"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "permissions": [
        "https://*/*",
        "http://*/*",
        "tabs"
    ]
}